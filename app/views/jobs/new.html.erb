<h1 class="text-align-center">New Job</h1>
<div style="height: 10px;"></div>
<div class="flex-justify-center">
  <div style="padding: 40px;" class="rectangle outline ">
    <%= simple_form_for [@user, @job] do |f|  %>
      <%= f.input :budget %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.association :tags, label: "Field of Work", label_method: :kind, collection: Tag.all, include_blank: true, input_html: { class: 'chosen-select form-control', data: {placeholder: "Click to tag.."} } %>
      <div class="flex-justify-center">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
<div style="height: 80px;"></div>

<script type="text/javascript">
  $(document).ready(function() {
    // enable chosen js
    $('.chosen-select').chosen({
      allow_single_deselect: true,
      no_results_text: 'No results matched',
      width: '200px'
    });
  });
</script>
