<h1 class="text-align-center">Sign Up</h1>
<div style="height: 10px;"></div>
<div class="flex-justify-center">
  <div style="padding: 40px;" class="rectangle outline ">
    <%= simple_form_for(@user) do |f| %>
      <%= f.input :contractor, as: :boolean, label: 'Are you a contractor?', include_blank: false, as: :select %>
      <%= f.input :company_name %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :phone_number %>
      <%= f.input :address %>
      <%= f.association :tags, label: "Field of Work", label_method: :kind, collection: Tag.all, include_blank: true, input_html: { class: 'chosen-select form-control', data: {placeholder: "Click to tag.."} } %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.input :avatar %>
      <div class="flex-justify-center">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
<div style="height: 80px;"></div>

<script type="text/javascript">
  $(document).ready(function() {
    // enable chosen js
    $('.chosen-select').chosen({
      allow_single_deselect: true,
      no_results_text: 'No results matched',
      width: '200px'
    });
  });
</script>
